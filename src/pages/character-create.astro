---
import AuthenticatedLayout from '../layouts/AuthenticatedLayout.astro';
import CharacterCreationForm from '../components/character/CharacterCreationForm';

export const prerender = false;

// Get slot from URL query parameter
const url = new URL(Astro.request.url);
const slotParam = url.searchParams.get('slot');
const slot = slotParam ? parseInt(slotParam) : -1;

// Validate slot
if (isNaN(slot) || slot < 0 || slot > 3) {
  return Astro.redirect('/character-select');
}
---

<AuthenticatedLayout title="Create Character - Density Dwarf">
  <div class="character-create-screen">
    <h1>Create New Character</h1>
    <p class="subtitle">Choose your character's appearance and class</p>

    <CharacterCreationForm client:load slot={slot} />
  </div>
</AuthenticatedLayout>

<style>
  .character-create-screen {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem;
    background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
    color: white;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    text-align: center;
  }

  .subtitle {
    font-size: 1.1rem;
    opacity: 0.9;
    margin-bottom: 2rem;
    text-align: center;
  }
</style>
</AuthenticatedLayout>
