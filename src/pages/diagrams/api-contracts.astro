---
import { readFileSync } from 'fs';
import MermaidDiagram from '../../components/docs/MermaidDiagram';

const diagramContent = readFileSync('docs/architecture/api-contracts.mmd', 'utf-8');
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>API Contracts - Density Dwarf Architecture</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: system-ui, -apple-system, sans-serif;
      background: #f5f5f5;
      padding: 2rem;
    }
    .container {
      max-width: 1400px;
      margin: 0 auto;
      background: white;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    h1 {
      font-size: 2rem;
      margin-bottom: 0.5rem;
      color: #333;
    }
    .description {
      color: #666;
      margin-bottom: 2rem;
    }
    .diagram-wrapper {
      background: white;
      padding: 2rem;
      border: 1px solid #ddd;
      border-radius: 6px;
      overflow-x: auto;
    }
    .back-link {
      display: inline-block;
      margin-top: 2rem;
      color: #0066cc;
      text-decoration: none;
    }
    .back-link:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>API Contracts Diagram</h1>
    <p class="description">Screen-to-API relationships showing which screens call which APIs during the title-to-city flow.</p>

    <div class="diagram-wrapper">
      <MermaidDiagram client:only="react" chart={diagramContent} />
    </div>

    <a href="/diagrams" class="back-link">‚Üê Back to Diagrams</a>
  </div>
</body>
</html>
